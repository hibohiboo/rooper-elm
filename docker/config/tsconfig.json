{
    "compilerOptions": {
        "target": "es6",
        "outDir": "./dist/assets/js",
        "strictNullChecks": true,
        "sourceMap": false,
        "allowJs": true,
        "declaration": false,
        "composite": false,

        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck":  true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "elm-stuff"],
    "typeRoots": ["node_modules", "types"]
}
