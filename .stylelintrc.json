{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "indentation": 2,
    "selector-max-id": 1,
    "max-nesting-depth": 10,
    "selector-max-compound-selectors": 10,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "each"
        ]
      }
    ]
  }
}
